
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/coop18" /> <!-- Cambia el color de fondo cuando se presiona -->
            <corners android:radius="8dp" /> <!-- Redondea las esquinas del botón -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/coop2" /> <!-- Cambia el color de fondo normal -->
            <corners android:radius="8dp" /> <!-- Redondea las esquinas del botón -->
        </shape>
    </item>
</selector>