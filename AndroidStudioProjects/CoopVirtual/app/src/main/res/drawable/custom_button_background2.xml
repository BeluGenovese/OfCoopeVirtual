<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del elemento -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Color del borde (negro en este caso) -->
            <solid android:color="@color/coope" /> <!-- Color de fondo -->
        </shape>
    </item>
    <!-- Flecha -->
    <item
        android:drawable="@drawable/baseline_arrow_forward_24"
        android:right="25dp"
    android:gravity="end" />
</layer-list>
